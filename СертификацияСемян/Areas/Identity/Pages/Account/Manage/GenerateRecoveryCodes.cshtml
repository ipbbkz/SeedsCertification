}

<partial name="_StatusMessage" for="StatusMessage" />
<h3>@ViewData["Title"]</h3>
<div class="alert alert-warning" role="alert">
    <p>
        <span class="glyphicon glyphicon-warning-sign"></span>
        <strong>@Manage.СохранитеКоды</strong>
    </p>
    <p>
        @Manage.ЕслиПотеряетеКоды
    </p>
    <p>
        @Manage.ГенерацияНовыхКодовНеМеняет <a asp-page="./ResetAuthenticator">@Manage.ПереустановитьКлючи</a>
    </p>
</div>
<div>
    <form method="post">
        <button class="btn btn-danger" type="submit">@Manage.ГенерироватьКоды</button>
    </form>
</div>
