@using System.Globalization
@inject УправляющийХозяйствами управляющийХозяйствами
@inject IJSRuntime JSRuntime
@inject ILogger<ДанныеПользователя> протоколировщик
@inject IWebHostEnvironment окружение
@inject IStringLocalizer<ДанныеПользователя> Лок

<label class="form-label">
    @Лок["Почта"] <span class="text-danger">*</span>
</label>
<InputText @bind-Value="Модель!.Почта" class="form-control" />
<label class="form-label">
    @Лок["Фамилия"] <span class="text-danger">*</span>
</label>
<InputText @bind-Value="Модель!.Фамилия" class="form-control" />
<label class="form-label">
    @Лок["Имя"] <span class="text-danger">*</span>
</label>
<InputText @bind-Value="Модель!.Имя" class="form-control" />
<label class="form-label">
    @Лок["Отчество"]
</label>
<InputText @bind-Value="Модель!.Отчество" class="form-control" />
@if (Инспектор)
{
    <div class="form-check">
        <InputCheckbox @bind-Value="Модель!.МожетДелатьСертификаты" class="form-check-input" id="can-issue-certificates" />
        <label class="form-check-label" for="can-issue-certificates">
            @Лок["МожетДелатьСертификаты"]
        </label>
    </div>
}
@code {

    [Parameter]
    public МодельПользователя Модель { get; set; }
    [Parameter]
    public bool Инспектор { get; set; }

}
