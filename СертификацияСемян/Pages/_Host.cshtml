@page "/"
@using Microsoft.AspNetCore.Components.Web
@inject IConfiguration конфигурация
@namespace СертификацияСемян.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="СертификацияСемян.styles.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="favicon.png"/>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=@конфигурация["GoogleMapAPIKey"]&v=3"></script>
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    <component type="typeof(Приложение)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            Произощла ошибка. Приложение может не отвечать пока не будет перезагружено.
        </environment>
        <environment include="Development">
            Произошла неожиданная ошибка. Смотрите инструменты разработчика браузера за подробностями.
        </environment>
        <a href="" class="reload">Перезагрузить</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
    <script src="_content/BlazorGoogleMaps/js/objectManager.js"></script>
    <script>
        window.getLocation = async () => {
            const pos = await new Promise((resolve, reject) => {
                navigator.geolocation.getCurrentPosition(resolve, reject);
            });
            return [pos.coords.latitude, pos.coords.longitude];
        };
    </script>
</body>
</html>
